*/

public class Rectangle {
	
	public int width, height, size, square;
	
	public Rectangle(int width, int height){
		if (width >= 0 && height >= 0)
			size = height * width;
	}
	
	public Rectangle(int width){
		size = width * width;
	}
	
	public Rectangle(){
		size = 1;
	}
	
	public boolean isSquare(int size){
		if (size == Math.sqrt(size) * Math.sqrt(size))
			return true;
		else
			return false;
	}
}
